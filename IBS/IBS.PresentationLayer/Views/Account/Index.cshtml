@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Account/_LayoutHome.cshtml";
}

@model IBS.EntitiesLayer.Models.Login


@if (ViewData["message"] != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>@ViewData["message"]</strong>
    </div>
}


<div id="loginrow" class="row">
    <div class="col-5" style="padding:40px;">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="UserName" class="control-label"></label>*@
                <input asp-for="UserName" class="form-control" placeholder="  Email" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Password" class="control-label"></label>*@
                <input asp-for="Password" class="form-control" placeholder="  Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" style="width:49%" />
                <input type="reset" value="Clear" class="btn btn-outline-dark" style="width:49%" />
            </div>
        </form>



        <div class="dropdown dropright">
            <button type="button" class="btn btn-outline-primary btn-block dropdown-toggle w-50" data-toggle="dropdown">
                &nbsp;Register
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="~/Account/RegisterAdmin">Admin</a>
                <a class="dropdown-item" href="~/Account/RegisterCustomer">Customer</a>
            </div>
        </div>
    </div>



    <div class="col-7">
        <div id="demo" class="carousel slide" data-ride="carousel">
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/t1.png " style="height:290px;width:100%;filter:blur(4px)" alt="IBS">
                    <div class="carousel-caption">
                        <h3 style="font-size:50px;color:white;text-shadow:2px"><b>IBS </b></h3>
                        <h4>Internet Banking Solutions</h4>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/t5.jpg" style="height:290px;width:100%;filter:blur(4px)" alt="Believers">
                    <div class="carousel-caption">
                        <h3 style="font-size:30px;color:white">Not just Bankers, BELIEVERS</h3>
                        <h4>Let's Build our community</h4>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/t9.jpeg" style="height:290px;width:100%;filter:blur(3px)" alt="Update Password">
                    <div class="carousel-caption">
                        <h3>New Feature</h3>
                        <p>Update Password!</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
</div>

