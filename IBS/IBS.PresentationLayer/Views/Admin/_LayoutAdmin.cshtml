@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styleIBS.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>



    @*<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>*@
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    @*<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>*@

</head>
<body>

    <div class="container-fluid  ">


        <nav class="navbar navbar-expand-sm navbar-light bg-white">
            <div class="navbar-collapse collapse w-100 order-1 order-md-0 ">
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.jpg" alt="logo" height="150" width="230">
                </a>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bnn">
                Internet Banking Solutions
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse w-100 order-3" id="bnn">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Whats New  |  </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#"> About Online IBS  |  </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-action="Logout" asp-controller="Authentication"> Logout <img src="~/images/logout.png" alt="logo" height="30" width="30"></a>
                    </li>
                </ul>
            </div>
        </nav>


        <div class="row bg-light  align-items-center" style="height:50px">
            <div class="col-md-3"><span id="time"></span></div>
            <div class="col-md-6"><marquee style="color:red">Online Internet Banking Solutions Launches a new feature to Update Password.</marquee></div>
            <div class="col-md-3"><span>Welcome  @Context.Session.GetString("name")  </span></div>
        </div>

        <div class="row">
            <div class="col-md-2 log" style="background-color: lightpink"> <a asp-action="Index"><p>My Profile</p></a></div>
            <div class="col-md-2 log" style="background-color:lemonchiffon"> <a asp-action="GetNewCustomers" ><p> View newly Registered Users</p></a></div>
            <div class="col-md-2 log" style="background-color:lemonchiffon"> <a asp-action="CalculateInterest" asp-route-ID="@Context.Session.GetString("userid")"><p>Calculate Interest</p></a></div>
            <div class="col-md-2 log" style="background-color:lightgrey"> <a asp-action="GetAllAccounts"><p>View All Account Details</p></a></div>
            <div class="col-md-2 log" style="background-color:lightcyan"> <a asp-action="GetAllTransactions"><p>View All Transactions</p></a></div>
        </div>

        <div>
            @RenderBody()
        </div>



        <div class="row bg-secondary" style="height:30px">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <a class="flink" href="#" style="color:white"> Privacy&nbsp;  | &nbsp;  </a>
                <a class="flink" href="#" style="color:white"> Terms&nbsp;   | &nbsp;  </a>
                <a class="flink" href="#" style="color:white"> Disclosure&nbsp;  |&nbsp;  </a>
                <a class="flink" href="#" style="color:white"> SiteMap </a>
            </div>
        </div>


        <div class="row bg-dark" style="height:30px">
            <div class="col-md-3"><span style="color:white"> &copy; Internet Banking Solutions</span></div>
            <div class="col-md-9"></div>
        </div>


    </div>

    <script>
        var display = setInterval(function () { Time() }, 0);

        function Time() {
            var date = new Date();
            var time = date.toLocaleTimeString();
            document.getElementById("time").innerHTML = time;
        }
    </script>

    >

</body>

</html>
