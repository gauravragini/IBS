@model IEnumerable<IBS.EntitiesLayer.Models.Transaction>

@{
    ViewData["Title"] = "AllTransactions";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<hr />
<h4><i>List Of All Transactions</i></h4>
<hr />

<table id="myTable" class="table table-striped table-responsive gridtable" style="background-color:white">
    <thead>
        <tr>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.TransactionId)
            </th>
            <th style="width:30%">
                @Html.DisplayNameFor(model => model.TransactionDateTime)
            </th>
            <th style="width:15%">
                @Html.DisplayNameFor(model => model.TransactionFrom)
            </th>
            <th style="width:15%">
                @Html.DisplayNameFor(model => model.TransactionTo)
            </th>
            <th style="width:10%">
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th style="width:20%">
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#myTable').dataTable();
    });
</script>

